@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // ensures header and footer from layout are used
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f6fa;
        margin: 0;
    }

    .home-container {
        text-align: center;
        padding: 60px 20px 40px;
    }

        .home-container h1 {
            font-size: 40px;
            margin-bottom: 12px;
            color: #2c3e50;
        }

        .home-container p {
            margin: 6px 0;
            color: #555;
            font-size: 16px;
        }

    .btn {
        display: inline-block;
        margin: 12px 10px 0;
        padding: 10px 22px;
        font-size: 15px;
        border: 2px solid #2c3e50;
        border-radius: 6px;
        text-decoration: none;
        color: #2c3e50;
        background-color: transparent;
        transition: 0.3s ease;
    }

        .btn:hover {
            background-color: #2c3e50;
            color: #fff;
        }

    .features {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 50px;
        gap: 24px;
        padding: 0 20px 60px;
    }

    .feature-card {
        background-color: #fff;
        padding: 20px 18px;
        border-radius: 10px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        width: 260px;
        text-align: center;
    }

        .feature-card h5 {
            margin-bottom: 10px;
            color: #2c3e50;
            font-size: 17px;
        }

        .feature-card p {
            color: #666;
            font-size: 14px;
        }
</style>

<div class="home-container">
    <h1>Book Manager</h1>
    <p>Track your reading. Organize your library. Stay inspired.</p>
    <p style="color: #888; font-size: 13px;">Your personal reading assistant — simple and powerful.</p>

    <a asp-controller="Account" asp-action="Login" class="btn">Login</a>
    <a asp-controller="Account" asp-action="Register" class="btn">Register</a>
</div>

<div class="features">
    <div class="feature-card">
        <h5>Track Books</h5>
        <p>Add books you've read and plan your next reads.</p>
    </div>
    <div class="feature-card">
        <h5>Organize Library</h5>
        <p>Sort by title, author, genre, or status.</p>
    </div>
    <div class="feature-card">
        <h5>Track Progress</h5>
        <p>Mark books as read and add quick notes.</p>
    </div>
</div>
